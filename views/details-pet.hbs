<style>
  #wrapper {
    display: flex;
    align-items: center;
  }

  #name-pet {
    padding: 10px;
    font-weight: bold;
    background-color: rgb(170, 238, 170);
  }

  #pet-picture {
    width: 200px;
    margin: 20px;
  }

  p {
    font-size: 25px;
  }

  span {
    font-weight: bold;
  }
</style>

<h1 id="name-pet">{{pet.name}}</h1>
<div id="wrapper">
  <section>
    <img id="pet-picture" src="{{pet.photo_url}}" alt="{{pet.photo_name}}">
  </section>
  <section id="data-info">
    <p><span>Type of animal: </span> {{pet.type_animal}}</p>
    <p><span>Size: </span> {{pet.size}}</p>
    <p><span>Description:</span></p>
    <p>{{pet.description}}</p>
    <p><span>Found the day: </span>{{pet.created_at}}</p>
  </section>
</div>